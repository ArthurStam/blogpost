include ./date

mixin post(post)
    - mixinStyles.post = true
    .post
        h1.h1.post_title
            a(href=`/posts/${post.post_id}`)= post.title
        .post_text
            | !{post.text}
        .post_meta
            .post_metaItem Author:&nbsp;
                if post.author
                    a(href=`/@${post.author}`) @#{post.author}
                else
                    = 'anonim'
            if post.created_at
                .post_metaItem
                    +date(post.created_at)
